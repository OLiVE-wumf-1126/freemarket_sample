= form_for @user, url: signup_index_path, method: :post do |f|
  = f.fields_for :address do |m|        #addressesテーブルに保存する為
    郵便番号
    = m.text_field :post_code, placeholder: '例)1234567',maxlength:'7'
    都道府県
    = m.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--"
    市町村
    = m.text_field :city, placeholder: '例)渋谷区'
    番地
    = m.text_field :block, placeholder: '道玄坂1-1-1'
    建物名
    = m.text_field :building, placeholder: '例)フォンティスビル'
    電話番号（任意）
    = m.text_field :telephone_number, placeholder: '例)08012345678',maxlength:'11'
  = f.submit '次へ進む'