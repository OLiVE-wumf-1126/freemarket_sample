- @items.each do |item|
  .list
    = link_to item_path(item.id) do
      - if item.purchased_info.blank?
        = image_tag item.images.first.image, class: "img"
    .list__details
      %h3.name
        = item.name
      .price
        %ul
          %li 
            = "#{item.price}円"
          %li
            = icon('fas', 'star')
            0
        %p (税込)
